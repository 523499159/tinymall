.HotName{
  font-size:90rpx;
  margin-left:20px;
  color:#293539;
  font-weight:300;
  position: relative;
}
.HotName text{
  width:7px;
  height:7px;
  position:absolute;
  border:2px solid #a78845;
  border-radius:50%;
}
.menu-box{
  width:80%;
  margin:0 auto;
  margin-top:20px;
}
.menu-box-list{
  text-align:center;
  margin-bottom:15px;
}
.menu-box-list .menu-list-title{
  color:#6a7275;
  font-size:40rpx;
  font-weight:300;
  letter-spacing:10px;
  position: relative;
}
.menu-box-list .hover{
  color:#a78845;
}
.menu-box-list .hover .l{
  width:5px;
  height:5px;
  position:absolute;
  border:1px solid #a78845;
  border-radius:50%;
  margin-left:-19px;
  margin-top:15px;
}
.menu-box-list .hover .r{
  width:5px;
  height:5px;
  position:absolute;
  border:1px solid #a78845;
  border-radius:50%;
  margin-left:3px;
  margin-top:15px;
}
.menu-list-pro{
  overflow-x: scroll;
  margin-top: 20px;
  white-space:nowrap;
  text-overflow:ellipsis;
  height: auto;
  width: 100%;
  overflow: hidden;
}

.menu-list-pro  .menu-list-item {
  display: block;
  float: left;
  height: 120px;
  width: 60px;
  margin-right: 15px;
}

.menu-list-pro .icon {
  height: 64px;
  width: 64px;
  border-radius:6px;
  box-shadow:0px 2px 2px 0px #cfc9ca;
}

.menu-list-pro .txt {
  display: block;
  float: left;
  width: 60px;
  color: #a78845;
}

